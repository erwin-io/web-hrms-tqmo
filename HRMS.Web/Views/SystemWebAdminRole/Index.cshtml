@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--breadcrum start-->
<ol class="breadcrumb text-left">
    <li>
        @ViewBag.Page.Module
    </li>
    @if (ViewBag.Page.ParentName != null)
    {
        <li><a href="@ViewBag.Page.ParentName">@ViewBag.Page.ParentTitle</a></li>
    }
    <li>
        @ViewBag.Page.Title
    </li>
</ol><!--breadcrum end-->

<div class="row ">
    <!-- table card code and example -->
    <div class="col-md-12">
        <div class="component-box">
            <!-- table card example -->
            <div class="pmd-card pmd-z-depth pmd-card-custom-view">
                <div class="pmd-card-title">
                    <h2 class="pmd-card-title-text">@ViewBag.Page.Title</h2>
                </div>
                <div class="pmd-card-body">
                    @Html.Partial("_Table")
                </div>
            </div>
            <!-- table card example end -->

        </div>
    </div>
    <!-- table card code and example end -->
    <div class="custom-floating-action">
        <button id="btnAdd" disabled class="btn pmd-btn-fab pmd-btn-raised pmd-ripple-effect btn-primary hidden">
            <i class="material-icons pmd-sm">add</i>
        </button>
    </div>
</div>


@Html.Partial("~/Views/Widget/_Modal.cshtml")

@section Scripts{
    <script src="~/Scripts/Controller/SystemWebAdminRole.js"></script>

    <script id="systemWebAdminRole-template" type="text/x-jsrender">
        <form id="form-systemWebAdminRole">
            <div class="group-fields clearfix row">
                <div class="col-xs-4">
                    <label data-link="visible{:!IsNew}" class="form-group pure-material-textfield-outlined">
                        <input id="SystemWebAdminRoleId" disabled name="SystemWebAdminRoleId" data-link="SystemWebAdminRoleId" placeholder=" " />
                        <span>SystemWebAdminRoleId</span>
                    </label>
                </div>
            </div>
            <div class="group-fields clearfix row">
                <div class="col-xs-12">
                    <label class="form-group pure-material-textfield-outlined">
                        <input id="RoleName" name="RoleName" data-link="RoleName" placeholder=" " />
                        <span>Role Name</span>
                    </label>
                </div>
            </div>
        </form>
    </script>
    <script>
        systemWebAdminRole.init();
    </script>
}